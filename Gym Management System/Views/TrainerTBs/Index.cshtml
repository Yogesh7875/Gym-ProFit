@model IEnumerable<Gym_Management_System.Models.TrainerTB>

@{
    ViewBag.Title = "Index";
}

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active" style="margin-left:20px">
                <span class="navbar-brand">Show</span>
            </li>
            <li>
                <span class="navbar-brand">@Model.Count()</span><span>entries</span>
            </li>
        </ul>
        <form method="get" class="form-inline my-2 my-lg-0" style="display: flex; margin-left:15px;">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search" name="search">
            <button class="btn btn-outline-success my-2 my-sm-0" style="margin-left:10px;" type="submit">Search</button>
        </form>
    </div>
    <a href="@Url.Action("Create", "TrainerTBs")" class="btn btn-primary" style="margin-right:50px">Add Trainer</a>
</nav>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col"><label for="name">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Name</label></th>
            <th scope="col">Phone</th>
            <th scope="col">Email</th>
            <th scope="col">Join Date</th>
            <th scope="col">DOB</th>
            <th scope="col">Address</th>
            <th scope="col">Experience</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row"><img src="~/Icon/profile.jpg" width="30px" height="30px" />&nbsp;&nbsp;@Html.DisplayFor(modelItem => item.Name)</th>
                <td>@Html.DisplayFor(modelItem => item.Phone)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    @{
                        @(
                            item.JoinDate.HasValue
                            ? item.JoinDate.Value.ToString("dd-MM-yyyy")
                            : "N/A"
                        )
                    }
                </td>
                <td>
                    @{
                        @(
                            item.DOB.HasValue
                            ? item.DOB.Value.ToString("dd-MM-yyyy")
                            : "N/A"
                        )
                    }
                </td>
                <td>@Html.DisplayFor(modelItem => item.Address)</td>
                <td>@Html.DisplayFor(modelItem => item.Experience)</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.ID })">
                        <img src="~/Icon/edit-1-2.svg" alt="Edit" />
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.ID })">
                        <img src="~/Icon/trash2-2.svg" alt="Edit" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
