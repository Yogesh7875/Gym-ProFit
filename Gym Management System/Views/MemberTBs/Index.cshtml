@model Gym_Management_System.Models.TransactionTB
@{
    ViewBag.Title = "Index";
}
@{
    int totalCount = (int)ViewData["tCount"];
}
<nav class="navbar navbar-expand-lg navbar-light bg-light" style="margin-bottom: 20px;">
    <div class="collapse navbar-collapse">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active" style="margin-left: 20px;">
                <span class="navbar-brand">Show</span>
            </li>
            <li>
                <span class="navbar-brand"></span>@totalCount<span> entries</span>
            </li>
        </ul>
        <form action="@Url.Action("Index", "MemberTBs")" method="get" style="display: flex; margin-left: 15px;">
            <div class="form-group">
                <input type="text" name="searchString" class="form-control" placeholder="Search by name">
            </div>
            <button type="submit" style="margin-left: 10px;" class="btn btn-primary">Search</button>
        </form>
    </div>
    <a href="@Url.Action("Payment", "Dashboard")" class="btn btn-primary" style="margin-right: 20px;">Add Member</a>
</nav>
<table class="table table-striped" style="width: 100%; border-collapse: collapse;">
    <thead>
        <tr>
            <th scope="col" style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd; background-color: #f2f2f2; font-weight: bold;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Name</th>
            <th scope="col" style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd; background-color: #f2f2f2; font-weight: bold;">Phone</th>
            <th scope="col" style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd; background-color: #f2f2f2; font-weight: bold;">Plan</th>
            <th scope="col" style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd; background-color: #f2f2f2; font-weight: bold;">Joining Date</th>
            <th scope="col" style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd; background-color: #f2f2f2; font-weight: bold;">Membership Days</th>
            <th scope="col" style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd; background-color: #f2f2f2; font-weight: bold;">Address</th>
            <th scope="col" style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd; background-color: #f2f2f2; font-weight: bold;">Trainer</th>
            <th scope="col" style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd; background-color: #f2f2f2; font-weight: bold;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Transactions)
        {
            <tr>
                <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;"><img src="~/Icon/profile.jpg" width="30px" height="30px" />&nbsp;&nbsp;@item.MemberTB.Name</td>
                <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">@item.MemberTB.Phone</td>
                <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">@item.Membership</td>
                <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">@{@item.MemberTB.JoiningDate.ToString("dd-MM-yyyy")}</td>
                <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">@item.Days</td>
                <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">@item.MemberTB.Address</td>
                <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">@item.Trainer</td>
                <td style="padding: 10px; text-align: left; border-bottom: 1px solid #ddd;">
                    <a href="@Url.Action("UpdateMember","Dashboard", new { id = item.MemberTB.ID,mid=item.ID})" style="width: 20px; margin-right: 10px; cursor: pointer;">
                        <img src="~/Icon/edit-1-2.svg" alt="Edit" style="width: 20px; margin-right: 10px; cursor: pointer;" />
                    </a>
                    <a href="@Url.Action("DeleteMember","Dashboard", new { id = item.MemberTB.ID,mid=item.ID})" style="width: 20px; margin-right: 10px; cursor: pointer;">
                        <img src="~/Icon/trash2-2.svg" alt="Delete" style="width: 20px; margin-right: 10px; cursor: pointer;" />
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
