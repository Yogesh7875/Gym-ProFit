@model Gym_Management_System.Models.MembershipTB

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <link href="~/CSS/Style.css" rel="stylesheet" />
    <div class="container">
        <h1 class="mt-4">Add Gym Visitor</h1>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.MembershipPlan, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.MembershipPlan, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Membership Name", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.MembershipPlan, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Price, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Price", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Days, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Days, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Days", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Days, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    @Html.LabelFor(model => model.Type, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Type, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Type", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.Type, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 d-grid gap-2">
                <a href="@Url.Action("Index","MembershipTBs")" class="btn btn-outline-secondary">Cancel</a>
            </div>
            <div class="col-md-6 d-grid gap-2">
                <input type="submit" value="Submit" class="btn btn-outline-success" />
            </div>
        </div>
    </div>
}
